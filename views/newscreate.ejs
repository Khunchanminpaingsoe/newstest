<div class="container col-md-6 offset-md-3 card mt-5">
<form action="/news/createpost" method="POST" enctype="multipart/form-data"> 

    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Title" >
    </div>
    <div class="form-row col-md-12">
    <div class="form-group col-md-6">
            <label for="image">Image</label>
            <input type="file" id="image" name="image">
    </div>
    <div class="form-group col-md-6">
            <label>Catname</label>
                <select name="catname" class="form-control">
                <% datas.forEach(cat => { %>
                  <% if (cat._id === news.catname) { %>
                    <option selected label="<%= cat.name %>" value="<%= cat._id %>">
                  <% } else { %>
                    <option label="<%= cat.name %>" value="<%= cat._id %>">
                  <% } %>
                <% }) %>
                </select>
    </div>
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" id="content" name="content" rows="3" placeholder="content"></textarea>
    </div>     
    <div class="form-group">
        <button type="submit" class="btn btn-success"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-info" href="/news"><i class="fa fa-list-alt"></i> View All</a>
    </div> 
        
</form>

</div>



