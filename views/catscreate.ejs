
<div class="container col-md-6">
    <form action="/createcategories" method="POST" class="form-horizontal"> 
    
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter category name..." >
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success"><i class="fa fa-database"></i> Submit</button>
        </div>       
    </form>
</div>
<br>
<br>
<br>
<div class="container col-md-4 card">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <% datas.forEach((data) => { %>
                <tr>
                    <td><%= data.name %></td>
                    <td class="text-right">
                        <a href="/news/createpost/<%= data._id %>" class="btn btn-outline-info"><i class="fa fa-plus fa-sm " aria-hidden="true"></i></a>
                
                        <a href="/cats/update/<%= data._id %>" class="btn btn-outline-primary"><i class="fa fa-pencil fa-sm " aria-hidden="true"></i></a>
                
                        <a href="/cats/delete/<%= data._id %>" class="btn btn-outline-danger" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-sm " aria-hidden="true"></i></a>
                    </td>
                </tr>
            <% }); %>        
        </tbody>
    </table>
    </div>
