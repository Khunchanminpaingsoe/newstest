<div class="container col-md-6 card">
    <form action="/cats/update/<%= cats._id %>" method="POST" class="form-horizontal"> 
    
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= cats.name %>">
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-success"><i class="fa fa-database"></i>Update</button>
        </div>       
    </form>
</div>