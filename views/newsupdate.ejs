<div class="container col-md-7 offset-md-2.5 card mt-5">
    <h2>Edit News</h2>
    <br>
    <form action="/home/news/update/<%= data._id %>" method="POST" enctype="multipart/form-data"> 
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title" value="<%= data.title %>">
        </div>
        <div class="form-row col-md-12">
        <div class="form-control col-md-6">
                <label for="image">Image</label>
                <input type="file" id="image" name="image">
        </div>
        <div class="form-control col-md-6">
            <label for="catname">Catname</label>
            <input type="text" class="form-control" id="catname" name="catname" value="<%= data.catname._id %>">
        </div>
        </div>
        <% if(data.image) { %>
            <img class="responsive-img" src="/<%= data.image %>" width="100px" height="100px">
        <% } %>
        <div class="form-group">
            <label for="content">Content</label>
            <textarea class="form-control" id="content" name="content" rows="3" placeholder="content"><%= data.content %></textarea>
        </div>     
        <div class="form-group">
            <button type="submit" class="btn btn-success"><i class="fa fa-database"></i>Update</button>
            <a href="/home/news" class="btn btn-dark">Back</a>
        </div> 
    </form>
</div>
    
    
    